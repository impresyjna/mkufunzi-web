<li class="right clearfix">
    <span class="chat-img pull-right">
        <% if !current_user.photo_file_name.nil? %>
            <div style="background-image: url(<%= current_user.photo.url(:small)%>);" class="circle-photo-chat"></div>
        <% else %>
            <img class="img-circle" src="img/nologinuser2.jpg" style="width: 50px" alt="">
        <% end %>
    </span>
    <div class="chat-body clearfix">
        <div class="header">
            <small class=" text-muted">
                <i class="fa fa-clock-o fa-fw"></i> <%= data.created_at.strftime("%Y-%m-%d %H:%M") %></small>
            <strong class="pull-right primary-font"><%= current_user.name %> <%= current_user.surname %></strong>
        </div>
        <p>
            <%= data.content %>
        </p>
    </div>
</li>