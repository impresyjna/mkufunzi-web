<div class="col-sm-2 col-lg-1" style="padding-left: 0px !important;">
	<% if !@user.photo_file_name.nil? %>
	    <div style="background-image: url(<%=@user.photo.url(:small)%>);" id="circle-photo-big"></div>
	<% else %>
	    <div style="background-image: url('img/nologinuser2.jpg');" id="circle-photo-big"></div>
	<% end %>
</div>

<div class="col-sm-10 col-lg-11">
	<div class="well bs-component">
		<form class="form-horizontal">
			<fieldset>
				<% if current_user.id.to_i == params[:id].to_i %> 
					<legend>O mnie</legend>
				<% else %>
					<legend>
						Użytkownik <%= @user.name %> <%= @user.surname %>
					</legend>
				<% end %>
				<div class="form-group">
					<label class="col-md-3 control-label">Imie</label>
			      	<div class="col-md-9 about-me">
			      		<%= @user.name %>
			      	</div>
		     	</div>
				<div class="form-group">
					<label class="col-md-3 control-label">Nazwisko</label>
			      	<div class="col-md-9 about-me">
			      		<%= @user.surname %>
			      	</div>
		      	</div>
				<div class="form-group">
			   		<label class="col-md-3 control-label">Email</label>
			      	<div class="col-md-9 about-me">
			      		<%= @user.email %>
			      	</div>
		      	</div>
				<div class="form-group">
			      	<label class="col-md-3 control-label">Login</label>
			      	<div class="col-md-9 about-me">
			      		<%= @user.login %>
			      	</div>
		      	</div>
		      	<div class="form-group">
			      	<label class="col-md-3 control-label">Dołączenie do seriwsu</label>
			      	<div class="col-md-9 about-me">
			      		<%= @user.created_at.strftime("%d-%m-%Y") %>
			      	</div>
		      	</div>

				<% if !@user.protege.nil? %>					
					<%= render 'proteges/about_me', protege: @user.protege %>
				  	<div class="form-group">
				      	<label class="col-md-3 control-label">Rola</label>
				      	<div class="col-md-9 about-me">
				      		Protegowany
				      	</div>
				  	</div>
				<% end %>

				<% if !@user.trainer.nil? %>
				  	<div class="form-group">
				      	<label class="col-md-3 control-label">Rola</label>
				      	<div class="col-md-9 about-me">
				      		Trener
				      	</div>
				  	</div>
				<% end %>
      		</fieldset>
      	</form>
	</div>
</div>