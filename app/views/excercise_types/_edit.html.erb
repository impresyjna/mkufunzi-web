
  <!-- Modal -->
  <div class="modal fade" id="EditExcerciseType<%= data.id.to_s %>" role="dialog">
    <div class="modal-dialog">
      <%= form_for data, :url => url_for(:controller => 'excercise_types', :action => 'update', id: data.id) do |f| %><fieldset>
      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-header">
          <h4> Edytuj            
            <button type="button" class="close" data-dismiss="modal">&times;</button>
          </h4>
        </div>
        <div class="modal-body">
          <br>
          <%= f.label :nazwa %><br>
          <%= f.text_field :name, class: 'form-control', style:'width: 100%'%><br>

          <%= f.label :formula %><br>
          <%= f.text_area(:formula, rows: 4,  class: 'form-control', style:'width: 100%') %><br>
        </div>
        <div class="modal-footer">
          <%= f.submit "Zapisz zmiany", class: "btn btn-primary btn-raised" %>
          <button type="button" class="btn btn-default btn-raised" data-dismiss="modal">Zamknij</button>
        </div>
      </div>
    </fieldset>
      <% end %>

    </div>
  </div>  