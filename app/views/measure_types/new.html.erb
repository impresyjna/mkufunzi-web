<% provide(:title, 'Dodaj do kartoteki') %>
<h1>Dodaj do kartoteki</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@measureType) do |f| %>
        <%= render 'shared/error_messages' %>

        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control' %>

        <%= f.label :unit %>
        <%= f.text_field :unit, class: 'form-control' %>

        <%= f.submit "Dodaj do kartoteki", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>