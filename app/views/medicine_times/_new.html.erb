  <!-- Modal -->
  <div class="modal fade" id="MedicineTime<%=medicine.id%>" role="dialog">
    <div class="modal-dialog">
    
      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
        	 <h4 class="modal-title" id="myModalLabel">Dodaj dozowanie do leku <%= medicine.name %></h4>
        </div>
        <%= form_for medicine_time , :url => url_for(:controller => 'medicine_times', :action => 'create') do |f| %>
        <div class="modal-body">
          <br>
                  <fieldset>

          <%= f.label :pora_dawkowania %>
          <%= f.text_field :medicine_time, id:"timepicker"+medicine.id.to_s , class: 'form-control'  %>
          
          <div class="checkbox">
            <label>
              <%= f.check_box :remind, id:"remind"+medicine.id.to_s %> Ustaw przypomnienie
            </label>
          </div>

          <%= f.label :przypomnienie, id:"label"+medicine.id.to_s, style: "display: none"  %>
          <%= f.text_field :remind_when , id:"timepicker2"+medicine.id.to_s, class: 'form-control', style: "display: none" %>
          <%= f.text_field :medicine_id, class: 'hidden', value: medicine.id %>
          
        </div>
        <div class="modal-footer">
          <%= f.submit "Dodaj czas", class: "btn btn-primary btn-raised" %>
          <button type="button" class="btn btn-default btn-raised" data-dismiss="modal">Zamknij</button>
        </div>
              </fieldset>
      </div>
      <% end %>
      </div>
    </div>
  </div>

<script type="text/javascript">
  $('#timepicker'+ <%= medicine.id.to_s %>).timepicker({
      minuteStep: 5,
      showInputs: false,
      disableFocus: true
  });
    $('#timepicker2'+ <%= medicine.id.to_s %>).timepicker({
      minuteStep: 5,
      showInputs: false,
      disableFocus: true
  });

$('#remind'+ <%= medicine.id.to_s %>).click(function () {
    if ($('#remind'+ <%= medicine.id.to_s %>).is(':checked')) {
        $('#label'+ <%= medicine.id.to_s %>).show();
        $('#timepicker2'+ <%= medicine.id.to_s %>).show();
    } else {
        $('#label'+ <%= medicine.id.to_s %>).hide();
        $('#timepicker2'+ <%= medicine.id.to_s %>).hide();
    }
});
</script>

